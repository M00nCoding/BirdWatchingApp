<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1d9bd">

    <!-- Logo, Title, and User Icon -->

    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="WingWatch logo"
            android:scaleType="centerCrop"
            android:src="@drawable/wing_watch_logo" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Bird Observations"
            android:textColor="#3d2b1f"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:contentDescription="User icon"
            android:scaleType="centerCrop"
            android:src="@drawable/user_icon" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logout icon"
            android:onClick="logoutUser"
            android:scaleType="centerCrop"
            android:src="@drawable/logout"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d9b38c"
        android:padding="6dp"
        android:weightSum="4">

        <Button
            android:id = "@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:id="@+id/hotspots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotspots"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:id="@+id/birds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birds"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- ScrollView for Bird Items -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginTop="10dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Bird Items Here -->
            <!-- Example of Bird Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:background="#3d2b1f"
                    android:contentDescription="Southern Red Bishop"
                    android:scaleType="centerCrop"
                    android:src="@drawable/southern_red_bishop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Common Name: Southern Red Bishop"
                    android:textColor="#3d2b1f"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Scientific Name: Apalis flavida\n\nType: Bird\n\nSize: Length: 4.7-5.9 in"
                    android:textColor="#3d2b1f" />
            </LinearLayout>

            <!-- Other bird items -->

        </LinearLayout>
    </ScrollView>

    <!-- Clickable ImageView Outside ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:onClick="onClickableImageClick"
            android:contentDescription="Camera icon"
            android:src="@drawable/camera_icon" />
    </LinearLayout>
</LinearLayout>
