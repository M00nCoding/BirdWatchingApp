<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1d9bd">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/wing_watch_logo"
            android:contentDescription="WingWatch logo"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bird Observations"
            android:textSize="24sp"
            android:textColor="#3d2b1f"
            android:gravity="center" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user_icon"
            android:contentDescription="User icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#d9b38c"
        android:padding="6dp"
        android:weightSum="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotspots"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birds"
            android:textColor="#3d2b1f"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- Scrollable Bird Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Bird Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:background="#3d2b1f"
                    android:contentDescription="Southern Red Bishop"
                    android:scaleType="centerCrop"
                    android:src="@drawable/southern_red_bishop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Common Name: Southern Red Bishop"
                    android:textColor="#3d2b1f"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Scientific Name: Apalis flavida\n\nType: Bird\n\nSize: Length: 4.7-5.9 in"
                    android:textColor="#3d2b1f" />
            </LinearLayout>

            <!-- Bird Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="333dp"
                    android:adjustViewBounds="true"
                    android:background="#3d2b1f"
                    android:contentDescription="African Hoopoe"
                    android:scaleType="centerCrop"
                    android:src="@drawable/african_hoopoe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Common Name: African Hoopoe"
                    android:textColor="#3d2b1f"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Scientific Name: Upupa africana\n\nType: Bird\n\nSize: Length: 9.8-11.8 in"
                    android:textColor="#3d2b1f" />
            </LinearLayout>

            <!-- Bird Item 3: Burchell's Starling -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3d2b1f"
                    android:contentDescription="Burchell's Starling"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/burchells_starling" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Common Name: Burchell's Starling"
                    android:textColor="#3d2b1f"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Scientific Name: Lamprotornis australis\n\nType: Bird\n\nSize: Length: 8.7-9.8 in"
                    android:textColor="#3d2b1f" />
            </LinearLayout>

            <!-- Bird Item 4: Cape Turtle Dove -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3d2b1f"
                    android:contentDescription="Cape Turtle Dove"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/cape_turtle_dove" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Common Name: Cape Turtle Dove"
                    android:textColor="#3d2b1f"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Scientific Name: Streptopelia capicola\n\nType: Bird\n\nSize: Length: 11.4-12.2 in"
                    android:textColor="#3d2b1f" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3d2b1f"
                    android:contentDescription="Common Fiscal"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/common_fiscal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Common Name: Common Fiscal"
                    android:textColor="#3d2b1f"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="Scientific Name: Lanius collaris\n\nType: Bird\n\nSize: Length: 7.9-9.1 in"
                    android:textColor="#3d2b1f" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>